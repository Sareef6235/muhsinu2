rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üî¥ DEVELOPMENT RULES - VERY PERMISSIVE
    // ‚ö†Ô∏è  WARNING: These rules are for development only!
    // ‚ö†Ô∏è  DO NOT use in production - they allow too much access
    
    // Users collection - Allow authenticated users to manage
    match /users/{userId} {
      // Any authenticated user can read any user document
      allow read: if request.auth != null;
      
      // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own document, or any if they exist in users collection
      allow update: if request.auth != null;
      
      // Allow delete for authenticated users (admins)
      allow delete: if request.auth != null;
    }

    // Subjects collection - Open access for development
    match /subjects/{subjectId} {
      // Anyone can read/write subjects during development
      allow read, write: if true;
    }

    // Bookings collection - Open for testing
    match /bookings/{bookingId} {
      // Anyone can create/read/manage bookings during development
      allow read, write: if true;
    }
  }
}
