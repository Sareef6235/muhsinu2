rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ›¡ï¸ SECURITY HELPERS
    function isSignedIn() {
      return request.auth != null;
    }

    // Robust admin check with existence verification
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ğŸ‘¤ USERS COLLECTION
    match /users/{userId} {
      
      // ğŸ”“ SELF-ACCESS (Highest Priority)
      // Allow any signed-in user to read their own document.
      // If the document doesn't exist, Firestore returns a success with snap.exists() = false.
      allow read: if isSignedIn() && request.auth.uid == userId;

      // Allow users to create their own document on first sign-in.
      allow create: if isSignedIn() && request.auth.uid == userId;

      // Allow users to update their own profile, but NOT their role or approval status.
      allow update: if isSignedIn() && request.auth.uid == userId &&
                    (!request.resource.data.diff(resource.data).affectedKeys()
                    .hasAny(['role', 'approved']));

      // ğŸ‘‘ ADMIN ACCESS
      // Allow admins to perform any operation on any user document.
      allow read, write: if isAdmin();
    }

    // ğŸ“… BOOKINGS COLLECTION
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, write: if isAdmin();
    }

    // ğŸ“š SUBJECTS COLLECTION
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ğŸ–¼ï¸ IMAGES COLLECTION
    match /images/{imageId} {
      allow read: if true;
      allow write: if isSignedIn() && 
                    (request.auth.uid == request.resource.data.userId || isAdmin());
    }
  }
}
